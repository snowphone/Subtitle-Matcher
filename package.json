    "fs-extra": "^8.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/argparse": "^1.0.38",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.0"
  },
  "scripts": {
